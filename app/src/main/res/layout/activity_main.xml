<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/luncher_bg"
    >

    <TextView
        android:id="@+id/tv_versionName_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_Downlad_sp"
        android:layout_centerHorizontal="true"
        android:shadowColor="#d1131c"
        android:shadowDx="2"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="版本号 1.0.0"
        android:textSize="20sp"/>



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_versionName_splash"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tv_versionName_splash"
        android:layout_marginBottom="82dp"/>

    <TextView
        android:id="@+id/tv_Downlad_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44dp"

        android:layout_marginLeft="50dp"
        android:layout_toLeftOf="@id/tv_versionName_splash"
        android:text="New Text"
        android:visibility="invisible"
        />



    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"/>


</RelativeLayout>
















